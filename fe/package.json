{
  "name": "open-kirara-platform",
  "version": "1.0.0",
  "description": "Open Kirara Platform",
  "main": "main.js",
  "scripts": {
    "build": "webpack",
    "watch": "webpack --watch --config webpack.development.ts",
    "build-production": "webpack --config webpack.production.ts",
    "build-development": "webpack --config webpack.development.ts",
    "create-package": "npm run build-production && zip -r \"kagimori-$(git describe --tags).zip\" dist icons static manifest.json LICENSE README.md",
    "up": "npm-check-updates --upgrade && npm install && npm audit fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "Kirara"
  ],
  "author": "Kaede Fujisaki",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@types/webpack": "^4.41.22",
    "npm-check-updates": "^9.0.3",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "vue": "^2.6.12",
    "vue-class-component": "^7.2.6"
  },
  "private": true
}
